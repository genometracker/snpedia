= form_for @gwas_result do |f|
  - if @gwas_result.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gwas_result.errors.count, "error")} prohibited this gwas_result from being saved:"
      %ul
        - @gwas_result.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :snp
    = f.text_field :snp
  .field
    = f.label :risk_allele
    = f.text_field :risk_allele
  .field
    = f.label :effect_size
    = f.text_field :effect_size
  .field
    = f.label :p_value
    = f.text_field :p_value
  .field
    = f.label :article_url
    = f.text_field :article_url
  .field
    = f.label :article_title
    = f.text_field :article_title
  .actions
    = f.submit 'Save'
