= form_for @medical_condition do |f|
  - if @medical_condition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@medical_condition.errors.count, "error")} prohibited this medical_condition from being saved:"
      %ul
        - @medical_condition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
